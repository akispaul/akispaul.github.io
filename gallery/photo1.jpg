
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Akispaul Gallery</title>
  <link rel="stylesheet" href="style.css" />
</head>
<body>
  <h1>Akispaul Photo Gallery</h1>
  <p>Click a photo to download, or download all.</p>

  <button onclick="downloadAll()">Download All Photos</button>

  <div class="gallery">
    <img src="gallery/photo1.jpg" download />
    <img src="gallery/photo2.jpg" download />
    <img src="gallery/photo3.jpg" download />
  </div>

  <script src="script.js"></script>
</body>
</html>


function downloadAll() {
  alert("To download all photos, right-click and save images or integrate ZIP later.");
}


body {
  font-family: Arial, sans-serif;
  text-align: center;
  background: #f5f5f5;
}
.gallery {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 15px;
  padding: 20px;
}
.gallery img {
  width: 100%;
  cursor: pointer;
  border-radius: 8px;
}
